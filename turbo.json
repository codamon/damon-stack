{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*", "**/tsconfig.json"],
    "pipeline": {
      "dev": {
        "dependsOn": ["^build"],
        "cache": false,
        "persistent": true,
        "env": ["NODE_ENV", "PORT", "NEXTAUTH_SECRET", "NEXTAUTH_URL"]
      },
      "build": {
        "dependsOn": ["^build"],
        "outputs": [".next/**", "!.next/cache/**", "dist/**"],
        "env": ["NODE_ENV", "NEXTAUTH_SECRET", "NEXTAUTH_URL"]
      },
      "start": {
        "dependsOn": ["build"],
        "cache": false,
        "persistent": true,
        "env": ["NODE_ENV", "PORT", "NEXTAUTH_SECRET", "NEXTAUTH_URL"]
      },
      "lint": {
        "outputs": [],
        "cache": true
      },
      "type-check": {
        "dependsOn": ["^build"],
        "outputs": [],
        "cache": true
      },
      "db:push": {
        "cache": false
      },
      "db:generate": {
        "dependsOn": [],
        "outputs": ["packages/db/generated/**"],
        "cache": true
      },
      "db:studio": {
        "cache": false,
        "persistent": true
      }
    },
    "globalEnv": [
      "NODE_ENV",
      "PORT",
      "NEXTAUTH_SECRET", 
      "NEXTAUTH_URL",
      "DATABASE_URL"
    ]
  }